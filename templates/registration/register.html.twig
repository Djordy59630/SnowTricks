{% extends 'base.html.twig' %}

{% block title %}Insciption{% endblock %}

{% block body %}

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div id="page" class="d-flex justify-content-center align-items-center" >
    
        <div id="middle-box">
            <h1 class="h3 mb-3 font-weight-normal text-center text-uppercase">Inscription</h1>
            {{ form_start(registrationForm) }}

            <div class="mb-3">
                {{ form_label(registrationForm.username, 'Pseudonyme') }}
                {{ form_widget(registrationForm.username) }}
                {{ form_errors(registrationForm.username) }}
            </div>
             <div class="mb-3">
            {{ form_label(registrationForm.mail) }}
            {{ form_widget(registrationForm.mail) }}
            {{ form_errors(registrationForm.mail) }}
            </div>

            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            {# {{ form_row(registrationForm.agreeTerms) }} #}

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-dark">Valider</button>
            </div>
            {{ form_end(registrationForm) }}

             <a class="text-dark text-center d-block mt-3" href="{{path('app_login')}}">Vous avez déjà un compte ?</a>
        </div>
    
    </div>
{% endblock %}
